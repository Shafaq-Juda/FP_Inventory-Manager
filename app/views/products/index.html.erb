<div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag("Products Banner.png", class: "d-block w-100", alt: "banner", height: "470") %>
    </div>
  </div>
</div>
<div class="text-center", style= "margin-top:20px;">
  <a href="/products/new" style="font-size: 40px;"> <i class="bi bi-plus-circle-fill" style="color: #005493;"></i> </a>
</div>

<div class="container mt-2">
  <div class="row row-cols-3">
    <% @products.each do |product| %>
      <div class="col mb-4">
        <div class="card">
          <% if product.image.attached? %>
            <%= image_tag product.image.first, class: "card-img-top", width: "300px" %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
           <%= link_to "Details", product_path(product), class: "btn blue-button" %>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
