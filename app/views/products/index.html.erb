<h1>Products</h1>

<%= link_to "New product", new_product_path %>

<div id="products">
 
    
     <table>
      <tr>
        <th>Name</th>
        <th>Image</th>
        <th>Details</th>
      </tr>
      <% @products.each do |product| %>
        <tr>
          <td> <%= product.name %></td>
          <td> <%= image_tag product.image.first if product.image.attached? %></td>
          
          
          <td> <%= link_to "Show this product", product %> </td>
        </tr>
      <% end %>
      </table>
 
</div>
