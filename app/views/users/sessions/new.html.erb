<div class="form-container d-flex align-items-center justify-content-center">
  <div class="card shadow text-light" style="width: 400px; background-color: #005493;">
    <div class="card-body p-4">
      <h2 class="mb-4">Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-3">
          <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="mb-3">
          <%= f.button :submit, "Log in", class: "btn btn-block grey-button" %>
        </div>

        <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "d-block mb-3 text-center" %>
        <% end %>
      <% end %>
    </div>
  </div>

  <%= link_to "Back", root_path, class: "btn btn-block blue-button my-2" %>

</div>
