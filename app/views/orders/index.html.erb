<div class="text-center", style= "margin-top:20px;">
 <h1>Orders</h1>
  <%= link_to "New order", new_order_path, class: "btn blue-button rounded-circle" %>
</div>

<div class="container mt-5">
  <div class="row row-cols-3">
    <% @orders.each do |order| %>
      <div class="col mb-4">
        <div class="card">
         <% if order.product.image.attached? %>
          <%= image_tag order.product.image.first, class: "card-img-top" %> 
          <% end %>
          <div class="card-body">
            
           <h5 class="card-title"> <%= order.product.name %></h5>
           <p class="card-text"><strong>ID: </strong><%= order.product_id %></p>
            <p class="card-text"><strong>Quantity Sold: </strong><%= order.quantity_sold%></p>
            <a href="<%= order_path(order) %>" class="btn blue-button">Details</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
