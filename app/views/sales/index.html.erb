<div class="text-center", style= "margin-top:20px;">
  <h1>Sales</h1>
  <%= link_to "New sale", new_sale_path, class: "btn blue-button rounded-circle" %>

  <div class="container mt-5">
    <div class="row row-cols-6 justify-content-center">
      <div class="col-md-8">
        <table class="table table-striped table-hover">
          <tr>
            <th>Name</th>
            <th>Quantity Sold</th>
            <th>Details</th>
          </tr>
          <% @sales.each do |sale| %>
            <tr>
              <td><%= sale.product.name %></td>
              <td><%= sale.quantity_sold %></td>
              <td><a href="<%= sale_path(sale) %>" class="btn blue-button">Details</a></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
